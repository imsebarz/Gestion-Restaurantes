import { requireRole } from "../utils/auth";

export const tableResolvers = {
  Query: {
    tables: async (
      _: unknown,
      args: {
        filter?: {
          number?: number;
          capacityMin?: number;
          capacityMax?: number;
          hasQrCode?: boolean;
        };
        sort?: {
