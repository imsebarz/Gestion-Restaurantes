          hasQrCode?: boolean;
        };
      },
      context: GraphQLContext
    ) => {
      requireRole(context, [RoleEnum.STAFF, RoleEnum.MANAGER, RoleEnum.SUPERADMIN]);
      return context.repositories.tableRepository.count(args.filter);
    },
  },

  Mutation: {
    addTable: async (
      _: unknown,
